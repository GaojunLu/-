<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp" >
    
    <ImageView 
        android:id="@+id/iv_item_task"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_launcher"
        android:padding="5dp"
        android:layout_centerVertical="true"/>
    <TextView 
        android:id="@+id/tv_taskname_item_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="进程名称"
        android:layout_toRightOf="@id/iv_item_task"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"/>
    <TextView 
        android:id="@+id/tv_tasksize_item_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="11.1mb"
        android:layout_toRightOf="@id/iv_item_task"
        android:layout_below="@id/tv_taskname_item_task"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:textSize="12sp"
        android:textColor="#99000000"/>
    <CheckBox 
        android:clickable="false"
        android:focusable="false"
        android:id="@+id/cb_item_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"/>

</RelativeLayout>
