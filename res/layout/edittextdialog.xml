<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title_edittext_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#5A3030"
        android:textSize="18sp" />

    <EditText 
        android:id="@+id/et_edittext_dialog_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_normal"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:password="true"
        android:hint="输入密码"/>
    <EditText 
        android:id="@+id/et_edittext_dialog_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_normal"
        android:padding="2dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:password="true"
        android:hint="再次输入密码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/bt_cancel_edittext_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="15dp"
            android:background="@drawable/bg_selector_gray"
            android:textColor="#935513"/>
         <View 
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"/>
        <Button 
            android:id="@+id/bt_confirm_edittext_dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确定"
            android:background="@drawable/bg_selector_gray"
            android:textSize="15dp"
            android:textColor="#935513"/>
    </LinearLayout>

</LinearLayout>